<% layout('landing/layouts/boilerplate')%>

<style>
    /* .messages-nav, .landing-right{
        background: linear-gradient(#003380, #003d99, #0047b3, #0052cc, #005ce6);
    } */
    .messages:hover{
        background-color: rgb(233, 231, 231);
    }

    .cont li a{
        color: whitesmoke;
    }

    .menu{
        background: linear-gradient(#003380, #003d99, #0047b3, #0052cc, #005ce6) !important;
    }

    .menu div span{
        color: #a6d616;
    }
</style>
<div class="cont" style="height: 100vh;">
    <div class="loader-cont cont d-flex align-items-center justify-content-center" style="height: 100vh;"></div>
    <div class="d-flex landing-index d-none text-center" style="height: 100vh;">
        <%- include('./partials/_navbar.ejs') %>
        <div class="col landing-right">
            <div class="d-flex flex-column">
                <div class="d-flex justify-content-end p-3 header" style="height: 8vh;">
                    <%- include('./partials/_header.ejs')%>
                </div>
                <div class="bg-success landing-body p-3" style="border-radius: 15px 0 0 0;  background: linear-gradient(#003380, #003d99, #0047b3, #0052cc, #005ce6); height: 92vh;">
                    <%- include('../partials/flash.ejs') %>
                    <div class="d-flex justify-content-center flex-column" style="font-family: Georgia, 'Times New Roman', Times, serif;">
                        <div class="text-light">
                            <span style="font-weight: 900; font-size: xx-large;">Good morning, <a href=""></a><%= userName %>!</span>
                        </div>
                        <div class="text-light">
                            <b><span style="color: #a6d616;">Sunday,  October 29</span></b>
                        </div>
                        <br>
                        <div class="d-flex text-secondary" style="font-family: Georgia, 'Times New Roman', Times, serif;">
                            <div class="col d-flex justify-content-center">
                                <div class="col-3 p-1 bg-light mx-2 d-flex justify-content-center" style="border-radius: 30px 0 0 30px; font-size: x-small;">
                                    <div class="mx-3">
                                        <i class="fa-solid fa-square-envelope ml-5"></i>
                                        <span>4</span>
                                        Active Message/s
                                    </div>
                                    <div class="mx-3">
                                        <i class="fa-solid fa-users ml-5"></i>
                                        <span>4</span>
                                        Users
                                    </div>
                                </div>
                                <div class="col-3 p-1 bg-light mx-2 d-flex justify-content-center" style="border-radius: 0 30px 30px 0; font-size: x-small;">
                                    <div class="mx-3">
                                        <i class="fa-solid fa-lock"></i>
                                        <span>3</span>
                                        Admin/s
                                    </div>
                                    <div class="mx-3">
                                        <i class="fa-solid fa-universal-access ml-5"></i>
                                        <span>20</span>
                                        Members
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="p-2 d-flex justify-content-center">
                            <div class="col-4 d-flex bg-light">
                                <div class="d-flex align-items-center border justify-content-center bg-success" style="font-family: Georgia, 'Times New Roman', Times, serif; width: 10vw;">
                                    <span class="text-light" style="font-size: xx-large; font-size: xx-large;">S</span>
                                </div>
                                <div class="d-flex flex-column justify-content-center align-items-centers p-2 col">
                                    <u class="text-secondary"><span>Latest Added User</span></u>
                                    <b><span><%= userName %></span></b>
                                    <b><span>Manager</span></b>
                                    <b><span>server@chatapp.com</span></b>
                                    <div class="d-flex justify-content-center">
                                        <button class="btn btn-sm text-light col-5" style="background-color: rgb(240, 135, 5);">admin</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <footer class="position-absolute text-light mx-2" style="bottom: 5vh;">
                            <b><span>&copy; 2023 Chatapp.com | Privacy Policy</span></b>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="/landing/app.js"></script>
<script>
    const btnClose = document.querySelector('.btn-close');
    setTimeout(() => {
        // alert('hey');
        btnClose.dispatchEvent(new Event("click"));
    }, 5000);
</script>