<% if(success && success.length) {%>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close d-none" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

    <% if(error && error.length) {%>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
            <!-- <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button> -->
        </div>
        <% } %>
<script>
    function hideAlert(first, second){
        const btnClose = document.querySelector('.alert-dismissible');
        setTimeout(() => {
            btnClose.classList.remove('show');
            setTimeout(() => {
                btnClose.classList.add('d-none');
            }, second);
        }, first);
    }
</script>