<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <!-- CSS -->
    <link rel="stylesheet" href="/login/style.css">
    <link rel="stylesheet" href="/main.css">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
        crossorigin="anonymous"></script>

    <link
        href="https://fonts.googleapis.com/css2?family=Bungee+Spice&family=Carter+One&family=Cormorant+SC:wght@500&family=Dancing+Script:wght@400;500;700&family=East+Sea+Dokdo&family=Fascinate&family=Josefin+Sans:ital,wght@0,600;1,400&family=Kalam:wght@300&family=M+PLUS+1+Code:wght@700&family=Macondo&family=Montserrat&family=Nanum+Gothic+Coding&family=New+Rocker&family=Nunito:wght@800&family=Outfit:wght@300&family=Playfair+Display:ital,wght@0,400;1,900&family=Roboto+Mono&family=Roboto+Slab:wght@400;600&family=Roboto:wght@300;400&family=Satisfy&family=Tiro+Bangla&family=Zen+Antique&display=swap"
        rel="stylesheet">

    <!-- Icons -->
    <script src="https://kit.fontawesome.com/1f5ccdbc5a.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="cont" style="height: 100vh; overflow: hidden;">
        <div class="loader-cont bg-primary cont d-flex align-items-center justify-content-center"
            style="height: 100vh;"></div>
        <div class="admin d-none">
            <div class="admin-header">
                <div class="d-flex">
                    <div class="border border-disabled border-right col-2 p-2 ">
                        <img src="/chat_time_logo.png" class="img-fluid" alt="chat time logo" width="75" height="20px">
                    </div>
                    <div
                        class="col shadow d-flex justify-content-end align-items-center px-5 border-bottom border-warning">
                        <a href="" class="border rounded btn border-primary btn-outline-primary" role="button"
                            style="border-width: 3px !important;">Sign-out</a>
                    </div>
                </div>
                <div class="d-flex" style="height: 100vh;">
                    <div
                        class="col-2 bg-primary py-5 px-1 text-light d-flex justify-content-center flex-column border border-right border-warning">
                        <div class="text-center">
                            <h3 class="">Contacts</h3>
                        </div>
                        <div class="" style="height: 70vh; overflow: hidden;">
                            <% for(let user of users) {%>
                                <li class="col-lg-12">
                                    <a type="btn" href="/admin/<%= user._id %>"
                                        class="btn btn-outline-warning text-light col-lg-12">
                                        <%= user.name %>
                                    </a>
                                </li>
                                <% } %>
                        </div>
                    </div>
                    <div class="col p-5 conversation">
                        <div class="card">
                            <div class="text-center p-5">
                                <h5 class="card-title">
                                    <%= server.name %>
                                </h5>
                                <p class="card-text">With supporting text below as a natural lead-in to additional
                                    content.</p>
                                <a href="#" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>
                        <div class="card py-3 px-2 my-4 reply d-flex align-items-center">
                            <textarea name="" class="form-control col"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    const PRELOADING = "<div class='loader'><i class='fa fa-spin fa-spinner text-light' style='font-size: 50px'></i></div>";

    const container = document.querySelector('.cont');
    const adminCont = document.querySelector('.admin');
    const loaderCont = document.querySelector('.loader-cont');
    loaderCont.innerHTML = PRELOADING;
    setTimeout(() => {
        loaderCont.classList.add('d-none');
        adminCont.classList.remove('d-none');
    }, 1500);
</script>

</html>