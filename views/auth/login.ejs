        <div class="position-absolute" style="bottom: 0;">
            hey
        </div>
    </div>
</body>
<script>
    const btn = document.getElementById('login-btn-submit');
    const username = document.getElementById('username');
    const password = document.getElementById('password');
    const form = document.querySelector('.form');

    let admin_username = 'admin';
    let admin_password = 'adminsecret';
    // let kas_username = 'kas123';
    // let kas_password = 'kassecret';
    // let admin_username = 'admin';
    // let admin_username = 'admin';

    form.addEventListener('submit', function (e) {
        e.preventDefault();
        if (!e.target.username.value || !e.target.password.value) {
            isInvalid(e)
        } else {
            if (e.target.username.value == admin_username || e.target.password.value == admin_password) {
                window.location.href = '/admin';
            }
        }
    })

    function isInvalid(e) {
        if (!e.target.username.value && !e.target.password.value) {
            addInvalid(username)
            addInvalid(password);
        } if (!e.target.username.value) {
            addInvalid(username)
        } else if (!e.target.password.value) {
            addInvalid(password);
        }
    }

    function addInvalid(input) {
        input.classList.add('is-invalid');
    }

    function isValid(input) {
        input.addEventListener('change', function () {
            if (this.value) {
                this.classList.remove('is-invalid');
            }
        })
    }

    isValid(username);
    isValid(password);
</script>

