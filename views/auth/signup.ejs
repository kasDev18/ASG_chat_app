<% layout('layouts/boilerplate')%>
    <link rel="stylesheet" href="/signup/style.css">
    <div class="cont main-cont">
        <div class="loader-cont cont d-flex align-items-center justify-content-center"></div>
        <div class="d-none signup cont d-flex justify-content-center align-items-center">
            <div class="container d-flex justify-content-center align-items-center">
                <div class="card shadow bg-light col-5 py-5 px-2 mx-2">
                    <div class="card-title">
                        <%- include('../partials/flash.ejs') %>
                        <h5 class="text-center mt-5">Register</h5>  
                        <form action="/signup" method="POST">
                            <div class="mt-3 mb-3 px-4">
                                <div class="mb-3 col mx-1">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" class="form-control" name="signup[name]" id="name"
                                        placeholder="Name" required>

                                    <div id="validationServerUsernameFeedback" class="invalid-feedback">
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="mb-3 px-4">
                                    <label for="username" class="form-label">Email</label>
                                    <input type="text" name="signup[username]" class="form-control bg-disabled"
                                        id="username" readonly>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="mb-3 px-4">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control" name="signup[password]"
                                        id="password" placeholder="Enter Password" required>
                                </div>
                            </div>
                            <div class="px-4 mt-5">
                                <button class="btn btn-outline-success col-lg-12"
                                    type="submit">Register</button>
                            </div>
                            <div class="px-4 mt-2">
                                <a class="btn btn-outline-primary col-lg-12" href="/login" role="button">Back
                                    to
                                    Login</a>
                            </div>
                        </form>
                    </div>
                    <br>
                </div>
                <div class="col p-5 text-light signup-quote">
                    <h1>Join in +1000 Network</h1>
                </div>
            </div>
        </div>
    </div>

    <script src="/signup/app.js"></script>
    <script>
        hideAlert(5000, 100);
    </script>